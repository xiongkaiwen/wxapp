/* pages/search/search.wxss */
page{
  padding-top: 90rpx;
}
.afterSales{
  min-height: 240rpx;
  display: flex;
  background: #F23120;
  padding:30rpx;
  box-sizing: border-box;
}
.afterSales_title{
  font-size: 30rpx;
  color:#fff;
}
.afterSales_li{
  position: relative;
  font-size: 26rpx;
  color:#fff;
  margin-top:10rpx;
  padding-left: 30rpx;
}
.afterSales_li::after{
  content: "";
  position:absolute;
  background: #fff;
  width:14rpx;
  height: 14rpx;
  border-radius: 50%;
  left:5rpx;
  top:10rpx;
}


.afterSalesTool{
  display: flex;
  flex-direction: row-reverse;
  height: 100rpx;
  align-items: center;
  border-bottom: 6rpx solid #eee;
}
.afterSalesTool>view{
  height: 56rpx;
  line-height: 56rpx;
  padding:0 10rpx;
  border:1px solid #999999;
  color:#333;
  border-radius: 50rpx;
  margin-right: 20rpx;
}


.refund{
  padding:0 30rpx;
 }
 .refund_title{
   color:#333;
   font-size: 26rpx;
   line-height: 80rpx;
 }
 .cart_list_goods{
  display: flex;
  height: 180rpx;
  margin-bottom: 24rpx;
}
.cart_list_select{
  line-height: 180rpx;
  height: 180rpx;
}
.cart_list_select .cart_select_img{
  vertical-align: middle;
}
.cart_goods_img{
  margin-left: 10rpx;
}
.cart_goods_img image{
  width: 180rpx;
  height: 180rpx;
}
.cart_goods_title{
  color:#050101;
  font-size: 26rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.cart_goods_size{
  color: #666;
  font-size: 24rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
  margin-top: 10rpx;
}
.cart_goods_price{
  color: #E60012;
  font-size: 26rpx;
  line-height: 1.2;
  position: absolute;
  bottom: 0;
}
.cart_goods_text{
  height: 180rpx;
  margin-left: 20rpx;
  position: relative;
  width: 50vw;
}
.cart_goods_edit{
  height: 180rpx;
  position: relative;
}
.cart_goods_edit image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:-10rpx;
  left: 50%;
}
.cart_goods_num{
  align-self: flex-end;
  font-size: 24rpx;
  color:#666;
  line-height: 1.2;
  position: absolute;
  bottom: 0;
  left: 14rpx;
}
.order{
  font-size: 24rpx;
  color:#666;
  margin-top: 4rpx;
}
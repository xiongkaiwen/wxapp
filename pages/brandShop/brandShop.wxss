/* pages/address/getAddress.wxss */
page{
  padding-top: 90rpx;
}
.second_navs{
  width:94%;
  margin:0 auto;
  display: flex;
  flex-wrap:wrap;
  padding-bottom: 24rpx;
}
.second_nav{
  width:20%;
  text-align: center;
  margin-top:26rpx;
}
.second_nav image{
  width:76rpx;
  height: 76rpx;
  display: block;
  margin:0 auto;
}
.second_nav text{
  font-size: 20rpx;
  color:#666;
  margin-top: 4rpx;
  display: block;
}


.brandLists{
  border-top: 6rpx solid #eee;
}
.evalute_img{
   width: 12rpx;
  height: 23rpx
}
.toggleEvalute{
  text-align: right;
  padding: 30rpx;
}
.toggleEvalute text{
  color:#050101;
  font-size: 30rpx;
  padding-right: 6rpx;
}


.brand_list{
  padding:0 30rpx;
  position: relative;
}
.brand_list_top{
  display: flex;
}
.brand_shop_header{
  height: 76rpx;
  width: 76rpx;
  margin-right: 20rpx;
}
.brand_shop_name{
  color: #050101;
  font-size: 30rpx;
}
.brand_shop_evalute{
  color: #666;
  font-size: 24rpx;
}
.brand_shop_evalute text{
  color:#F61628;
  font-size: 24rpx;
}
.go_shop{
  color:#F61628;
  font-size: 26rpx;
  border:1px solid #F61628;
  border-radius: 6rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding:0 6rpx;
  position: absolute;
  right: 30rpx;
  top:20rpx;
}
.brand_list_body{
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.brand_list_show{
  width: 30vw;
  height: 30vw;
  position: relative;
}
.brand_list_show image{
  width: 100%;
  height: 30vw;
}
.brand_goods_price{
  color:#444;
  font-size: 24rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 50rpx;
  line-height: 50rpx;
  text-align: right;
  width: 100%;
  padding-right: 10rpx;
  box-sizing: border-box;
  background: rgba(255, 255, 255, .5)
}



.modal_text{
  text-align: center
}
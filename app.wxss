/**app.wxss**/

page {
	padding-bottom: 30rpx;
}
.righticon {
	height: 20rpx;
	width: 20rpx;
	border-top: 2px solid #c3c3c3;
	border-right: 2px solid #c3c3c3;
	transform: rotate(45deg);
}
.f_l {
	float: left;
}
.f_r {
	float: right;
}
.clearfix:after {
	content: "";
	display: block;
	visibility: hidden;
	height: 0;
	line-height: 0;
	clear: both;
}
.nonehoverclass {
	background-color: transparent;
}
::-webkit-scrollbar {
    width: 0px;
    height: 0px;
    color:transparent;
}
::-webkit-scrollbar-thumb {
    border-radius: 5px;
    -webkit-box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.2);
    background: rgba(0, 0, 0, 0.2);
}
text,textarea,input,select,checkbox,image,view,navigator {
	font-family: 'PingFangSC-Regular';
	font-size: 28rpx;
	box-sizing: border-box;
	color: #565656;
}
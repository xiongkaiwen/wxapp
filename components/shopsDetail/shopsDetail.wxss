.pageHeader{
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
  justify-content: space-between;
  padding:0 20rpx;
  border-bottom: 1px solid #eee;
  background: #fff;
}
.pageHeader_goback{
  width: 50rpx;
  height:50rpx;
  margin-top:22rpx;
}
.pageHeader_title{
  color:#333;
  font-size: 30rpx;
  margin: 0 16rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.pageHeader_title.active{
  color:#F61628;
  font-size: 32rpx;
  border-bottom: 1px solid #F61628;
}
.pageHeader_tool{
  width: 46rpx;
  height: 46rpx;
  vertical-align: middle;
}
.shareBtn{
  position:absolute;
  background:#fff;
  margin:0 !important;
  padding:0;
  line-height:90rpx;
  width:46rpx;
  top:27rpx;
  height:46rpx;
  opacity: 0;
} 
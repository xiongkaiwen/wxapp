.screeningBg{
  position: fixed;
  top:0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.6);
  z-index: 11;
}
.screeningBody{
  position: absolute;
  top:0;
  right: 0;
  width: 86%;
  height: 100%;
  background: #fff;
}
.area_choose{
  display: flex;
  height: 150rpx;
  line-height: 150rpx;
  justify-content: space-between;
  padding:0 30rpx;
}
.area_choose_left{
  color:#050101;
  font-size: 30rpx;
}
.area_choose_right{
  color:#F61628;
  font-size: 30rpx;
  width: 340rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
}
.area_choose_right image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}


.classifyLists{
  display: flex;
  flex-wrap: wrap;
  padding:0 30rpx;
}
.classify_list{
  background: #F0F0F0;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  width: 32%;
  border-radius: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1; 
  padding:0 2%;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.classify_list.active{
  background: #E31C0C;
  color:#fff;
}
.middle.classify_list{
  margin:0 2%;
}
.bg_row{
  width: 100%;
  height: 12rpx;
  background: #F0F0F0;
}


.price_choose{
  padding:0 30rpx;
}
.price_choose_title{
  font-size: 30rpx;
  color:#050101;
  line-height: 56rpx;
}
.price_choose_inputBox{
  display: flex;
  justify-content: space-between;
  margin-top:14rpx;
}
.price_choose_inputBox input{
  background: #F0F0F0;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  width: 260rpx;
}
.price_choose_input_row{
  width: 30rpx;
  height: 2rpx;
  background: #878787;
  margin-top: 30rpx;
}


.otherClassify{
  margin-top:45rpx;
}
.otherClassify_header{
  padding:0 30rpx;
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}
.otherClassify_header_left{
  font-size: 30rpx;
  color: #050101;
}
.otherClassify_header_right image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-top: -10rpx;
}
.otherClassify_header_right image.rotate{
  transform: rotate(180deg);
  margin-top:-2rpx;
}
.otherClassify_list_box.middle{
  margin:0 2%;
}
.otherClassify_list_box{
  height: 80rpx;
  width: 32%;
  margin-bottom: 24rpx;
  background: #F0F0F0;
  display: flex;
  border-radius: 10rpx;
}
.otherClassify_list{
  width:100%;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  padding:0 4%;
  box-sizing: border-box;
  align-self: center
}
.middle.otherClassify_list{
  margin:0 2%;
}